@{
    ViewBag.Title = "Johan Flow Boutique";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Resumen</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Clientes</h6>
                        <h6 id="totalclient">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad de Ventas</h6>
                        <h6 id="totalsell">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Productos</h6>
                        <h6 id="totalproduct">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-box-open fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de Ventas
    </div>
    <div class="card-body">

        <form action="@Url.Action("ExportVenta", "Home")" method="post">
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="formlabel"> Fecha de Inicio :</label>
                        <input class="form-control" id="txtstartdate" type="text" name="startdate" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="formlabel"> Fecha Fin :</label>
                        <input class="form-control" id="txtfinishdate" type="text" name="finishdate" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="formlabel"> Id Transacción:</label>
                        <input class="form-control" id="txtidtransaccion" type="text" name="idtransaction" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class=" d-grid mb-2">
                        <button class="btn btn-primary" id="btnbuscar" type="button"><i class="fas fa-search"></i> Buscar</button>
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i> Exportar</button>
                    </div>
                </div>

            </div>

        </form>

        <hr />

        <div class="row">

            <div class="col-sm-12">
                <table id="table" class="display cell-border" style="width: 100%">

                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>ID transacción</th>
                        </tr>


                    </thead>

                    <tr>
                        <td></td>
                    </tr>
                </table>

            </div>

        </div>
     
    </div>
</div>

@section scripts{
    <script>

        var datatable;

        $(document).ready(function () {


        $("#txtstartdate").datepicker({ dateformat: 'dd/mm/yy' }).datepicker('setDate', new Date())
        $("#txtfinishdate").datepicker({ dateformat: 'dd/mm/yy' }).datepicker('setDate', new Date())

         jQuery.ajax({
                url: '@Url.Action("ViewDashboard", "Home")',
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset-utf-8",
                success: function (data) {

                    var objeto = data.result;
        
                    $("#totalclient" ).text(objeto.TotalClient),
                    $("#totalsell").text(objeto.TotalVenta),
                    $("#totalproduct").text(objeto.TotalProduct)


                }

         });


            var Url = '@Url.Action("ListReport", "Home")' +
                "?startdate=2022-01-04" +
                "&finishdate=2022-12-31" +
                "&idtransaction=0"

                datatable = $("#table").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: Url,
                    type: 'GET',
                    dataType: 'json'
                },
                "columns": [
                    {"data":"FechaVenta"},
                    { "data": "Cliente" },
                    { "data": "Producto" },
                    { "data": "Precio" },
                    { "data": "Cantidad" },
                    { "data": "Total" },
                    { "data": "IdTransaccion" }


                ],
                "language": {
                   "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
                }

            });
        })


        $("#btnbuscar").on("click", function () {
                 var new_Url = '@Url.Action("ListReport", "Home")' +
                "?startdate=" + $("#txtstartdate").val() +
                "&finishdate=" + $("#txtfinishdate").val() +
                "&idtransaction=" + $("#txtidtransaccion").val()

            datatable.ajax.url(new_Url).load()

        })


    </script>
}