
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <!--Detail Product-->
                        <div class="col-sm-9">
                            <div class="d-flex justify-content-between">
                                <h5 class="ms-2 mt-2">Detalle Carrito</h5>
                                <a class="btn btn-primary" href="@Url.Action("Index","Shop")"><i class="fas fa-cart-plus"></i> Seguir Comprando</a>
                            </div>
                            <hr class="mt-2 mb-2" />
                            <div id="product-cart">

                                <div class="card mb-2 card-product" >
                                    <div class="card-body">
                                        <div class="row">

                                            <div class="col-sm-2 align-self-center d-flex justify-content-center">
                                                <img class="rounded" src="https://imgs.search.brave.com/Q2aCycvYIhk1-YGFAWfx8ybEoTFf_DAWgIwAUn_qb_w/rs:fit:1200:1058:1/g:ce/aHR0cHM6Ly93d3cu/ZGViYXRlLmNvbS5t/eC9fX2V4cG9ydC8x/NTU0MDU2NDU1NTUx/L3NpdGVzL2RlYmF0/ZS9pbWcvMjAxOS8w/My8zMS8xMS5wbmdf/MjA0ODE1NTU0MS5w/bmc" style="width:100px; height:100px" />
                                            </div>

                                            <div class="col-sm-4 align-self-center">
                                                <span class="font-wight-bold d-block">Marca</span>
                                                <span></span>
                                            </div>

                                            <div class="col-sm-2 align-self-center">
                                                <span>Precio : S/. 1500</span>
                                            </div>

                                            <div class="col-sm-2 align-self-center">
                                                <div class="d-flex">

                                                    <button class="btn btn-outline-secondary btn-restar rounded-0">
